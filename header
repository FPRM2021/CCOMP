#ifndef INTEGERARRAY_H
#define INTEGERARRAY_H
#include <iostream>
using namespace std;

class IntegerArray {
    int *data;
    int size;
    public:
        IntegerArray(int, int[]);
        IntegerArray(IntegerArray &);
        ~IntegerArray();
        void ImpData();
        void Insertar(int);
        void Insertar(int, int);
        void Eliminar(int);
        void Vaciar();
        int Mayor();
        int Menor();
        int Suma();
        int Promedio();
        int MayorPrim();
        int MenorPrim();
        void Ordenar();
        void Invertir();
};
#endif // INTEGERARRAY_H
